<!-- //////////////////////////////////////////////////////////////-->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">       

                <!-- Begin Page Content -->
                <div class="container-fluid">

                <!-- Page Heading -->
                <div class="colordpart">
                    <div class="welcome-text">
                        <h3 class="mb-2 text-gray-800">Great job! These are all your completed tasks:</h3>
                    </div>
                    <div class="logo-container">
                        <img src="https://i.ibb.co/3RFVYHJ/Screenshot-2023-06-23-163918.png" alt="Logo" width="100"
                            height="100" class="logo">
                    </div>
                </div>


                    <!-- DataTales Example -->
                    <div class="list-group">
                        <%taskList.forEach((task) => {%>
                            <% if (task.state) { %>
                                <div class="list-group-item list-group-item-success">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1"><%= task.name%></h5>
                                        <small>
                                          due time: 
                                          <%= (new Date(task.dueDate)).getDate() %>/
                                          <%= (new Date(task.dueDate)).getMonth()+1 %>/
                                          <%= (new Date(task.dueDate)).getFullYear() %>
                                        </small>                                  
                                      </div>
                                      <div class="d-flex w-100 justify-content-between">
                                          <p class="my-3"><%= task.description%></p>
                                          <small class="text-muted">
                                              
                                          </small>                                  
                                        </div>
                                      <small class="text-muted">
                                          <% if (task.state) { %>
                                              <button type="button" onClick="parent.location='incomplete/<%= task._id %>/completed'" class="btn btn-warning">Incomplete </button>
                                          <%} else { %>
                                              <button type="button" onClick="parent.location='Complete/<%= task._id %>/completed'" class="btn btn-success">Complete</button>        
                                          <% } %> 
                                          
                                          <button type="button" onClick="parent.location='deleteTask/<%= task._id %>/completed'" class="btn btn-danger">Delete</button>
                                      </small>
                                    </div>
                            <%}%>                
                                
                        <%})%>
                        
                      </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Web project 2023</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/dashboard">Logout</a>
                </div>
            </div>
        </div>
    </div>

</body>

</html>